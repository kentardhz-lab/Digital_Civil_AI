{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Input Elements Schema",
  "description": "Schema defining the required structure for structural input elements used by the Digital Civil AI decision engine.",
  "type": "object",
  "required": ["elements"],
  "properties": {
    "elements": {
      "type": "array",
      "description": "List of structural elements to be evaluated.",
      "items": {
        "type": "object",
        "required": [
          "element_id",
          "element_type",
          "length_m",
          "load_kn",
          "material"
        ],
        "properties": {
          "element_id": {
            "type": "string",
            "description": "Unique identifier of the structural element (BIM ID or internal ID)."
          },
          "element_type": {
            "type": "string",
            "description": "Type of structural element (e.g. beam, column, slab)."
          },
          "length_m": {
            "type": "number",
            "minimum": 0,
            "description": "Element length in meters."
          },
          "load_kn": {
            "type": "number",
            "minimum": 0,
            "description": "Applied load in kilonewtons."
          },
          "material": {
            "type": "string",
            "description": "Material designation (e.g. C30/37, S355)."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
